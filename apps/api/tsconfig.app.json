{
  "extends": "@workspace/typescript-config/tsconfig.nestjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "scripts/seed.ts",
    "*.config.ts",
    "*.config.mts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**/*",
    "src/metadata.ts"
  ]
}
